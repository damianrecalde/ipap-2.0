{% extends 'base.html.twig' %}

{% block title %}Curso{% endblock %}

{% block body %}
    <h1>Curso</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ curso.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ curso.nombre }}</td>
            </tr>
            <tr>
                <th>Prefijo</th>
                <td>{{ curso.prefijo }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{{ curso.activo ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Modalidad_implementacion</th>
                <td>{{ curso.modalidadImplementacion }}</td>
            </tr>
            <tr>
                <th>Fecha_inicio</th>
                <td>{{ curso.fechaInicio ? curso.fechaInicio|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Fecha_fin</th>
                <td>{{ curso.fechaFin ? curso.fechaFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Cantidad_horas</th>
                <td>{{ curso.cantidadHoras }}</td>
            </tr>
            <tr>
                <th>Eje</th>
                <td>{{ curso.eje }}</td>
            </tr>
            <tr>
                <th>Evaluacion</th>
                <td>{{ curso.evaluacion ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Creditos</th>
                <td>{{ curso.creditos }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_curso_index') }}">back to list</a>

    <a href="{{ path('app_curso_edit', {'id': curso.id}) }}">edit</a>

    {{ include('curso/_delete_form.html.twig') }}
{% endblock %}
